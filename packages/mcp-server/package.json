{
    "name": "@agent47/mcp-server",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "bin": {
        "mcp-server": "./dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "bundle": "esbuild src/http-server.ts --bundle --platform=node --outfile=dist/server.js --format=esm",
        "start": "node dist/server.js",
        "start:stdio": "node dist/index.js",
        "dev": "tsx src/http-server.ts",
        "dev:stdio": "tsx src/index.ts"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^0.6.0",
        "@agent47/aggregator": "*",
        "@agent47/integrations": "*",
        "@agent47/shared": "*",
        "zod": "^3.22.4",
        "playwright": "^1.40.0",
        "cheerio": "^1.0.0-rc.12",
        "@virtuals-protocol/acp-node": "^0.3.0-beta.29",
        "dotenv": "^16.4.5",
        "node-fetch": "^3.3.2",
        "express": "^4.18.2"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/express": "^4.17.21",
        "esbuild": "^0.24.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3"
    }
}
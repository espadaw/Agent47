{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@agent47/shared": [
                "../shared/src/index.ts"
            ],
            "@agent47/integrations": [
                "../integrations/src/index.ts"
            ],
            "@agent47/aggregator": [
                "../aggregator/src/index.ts"
            ]
        },
        "skipLibCheck": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}